{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js", // Path to your backend entry file
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json", // React app location
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build" // Output directory for the React build
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // API requests are handled by Node backend
      "dest": "server/app.js"
    },
    {
      "src": "/(.*)", // All other requests go to React frontend
      "dest": "client/build/$1"
    }
  ]
}
